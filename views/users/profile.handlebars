<div class="row text-center text-white py-4" style="background-color: #00b4db;">
  <h3 class="mx-auto"><i class="fa fa-user-circle"></i> Edit Profile</h3>
</div>

<div class="row bg-light">
  <div class="col-md-6 mr-auto my-3">
    <a href="/orders/dashboard" class="btn btn-light "><i class="fa fa-arrow-left"> Back to dashboard</i></a>
  </div>
  <div class="col-md-3 my-3">
    <button class="btn bg-custom btn-block" data-toggle="modal" data-target="#changePasswordModal"
      data-backdrop="static" data-keyboard="false">
      <i class="fa fa-lock"></i> Change Password</button>
  </div>

  <div class="col-md-3 my-3">
    <button type="submit" class="btn btn-block btn-danger" data-toggle="modal" data-target="#deleteAccountModal"
      data-backdrop="static" data-keyboard="false">
      <i class="fa fa-remove"></i> Delete Account</button>
  </div>

  {{!-- Delete account modal --}}
  <div class="modal fade" id="deleteAccountModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Confirm Delete </h5>
          <button class="close" data-dismiss="modal"><span class="text-white">&times;</span></button>
        </div>
        <div class="modal-body">
          <p class="lead">Are you sure you want to <span class="text-danger">delete </span>account?</p>
          <div class="modal-footer">
            <button class="btn bg-custom ml-auto" data-dismiss="modal">
              <i class="fa fa-arrow-left"></i> Cancel</button>
            <form class="delete-form" action="/users/profile?_method=DELETE" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row py-3">
  <div class="col-md-6 mx-auto">
    <div class="card">
      <div class="card-header text-center">
        <h3 class="">My Profile</h3>
      </div>
      <div class="card-body">
        <div class="profile-img">
          <i class="fa fa-user-circle fa-5x mb-3"></i>
        </div>

        <form class="mt-3">
          <div class="form-row">
            <div class="col">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" value="{{user.name}}" disabled>
              </div>
            </div>

            <div class="col">
              <div class="form-group">
                <label for="email" class="align-text-left">Email</label>
                <input type="email" class="form-control" value="{{user.email}}" disabled>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  {{!-- Change password modal --}}
  <div class="modal fade" id="changePasswordModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-custom">
          <h5 class="modal-title">Change Password</h5>
          <button class="close" data-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">

          {{!-- Check for errors --}}
          {{#each errors}}
          <div class="alert alert-danger form-feedback">{{text}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
          </div>
          {{else}}

          {{/each}}

          {{!-- Check for success messages --}}
          {{#if success_msg}}
          <div class="alert alert-success form-feedback">
            {{success_msg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
          </div>
          {{else}}

          {{/if}}

          <form id="changePassword" action="/users/profile?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label for="newPassword">New Password</label>
              <input type="password" name="newPassword" class="form-control">
            </div>

            <div class="form-group">
              <label for="confirmNewPassword">Confirm New Password</label>
              <input type="password" name="confirmNewPassword" class="form-control">
            </div>

            <input type="submit" class="btn bg-custom btn-block" value="Update Password">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>