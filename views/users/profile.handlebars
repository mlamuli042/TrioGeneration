<div class="row text-center text-white py-2" style="background-color: #00b4db;">
  <h4 class="mx-auto"><i class="fa fa-user-circle"></i> Edit Profile</h4>
</div>

<div class="row bg-light">
  <div class="col my-3">
    <a href="/orders" class="btn btn-light "><i class="fa fa-arrow-circle-left"> Back </i></a>
    <button type="submit" class="btn btn-danger float-right" data-toggle="modal" data-target="#deleteAccountModal"
      data-backdrop="static" data-keyboard="false">
      <i class="fa fa-remove"></i> Delete Account</button>
  </div>



  {{!-- Delete account modal --}}
  <div class="modal fade" id="deleteAccountModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Confirm Delete </h5>
          <button class="close" data-dismiss="modal"><span class="text-white">&times;</span></button>
        </div>
        <div class="modal-body">
          <p class="lead">Are you sure you want to <span class="text-danger">delete </span>account?</p>
          <div class="modal-footer">
            <button class="btn bg-custom" data-dismiss="modal">
              <i class="fa fa-arrow-left"></i> Cancel</button>
            <form class="delete-form" action="/users/profile?_method=DELETE" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Profile --}}
<div class="row py-2">
  <div class="col-md-6 mx-auto">
    {{!-- Check for errors --}}
    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{text}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{/each}}
    {{else}}
    {{!-- Check for success messages --}}
    {{#if success_msg}}
    <div class="alert alert-success">
      {{success_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{/if}}
    {{/if}}
    <div class="card">
      <div class="card-header text-center">
        <h5 class="">My Profile</h5>
      </div>
      <div class="card-body">
        <div class="profile-img">
          <i class="fa fa-user-circle fa-5x mb-3"></i>
        </div>

        <form class="mt-3">
          <div class="form-row">
            <div class="col">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" value="{{user.name}}" disabled>
              </div>
            </div>

            <div class="col">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" value="{{user.email}}" disabled>
              </div>
            </div>
          </div>
        </form>
        {{!-- change password accordion --}}
        <div id="accordion">
          <div class="card ">
            <div class="card-header text-center text-white" style="background-color: #7ed56f;" id="headingOne">
              <h5 class="mb-0">
                <div data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <i class="fa fa-arrow-circle-down"></i> Change Password
                </div>
              </h5>
            </div>
            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
              <div class="card-body">

                <form action="/users/profile?_method=PUT" method="post">
                  <input type="hidden" name="_method" value="PUT">
                  <div class="form-row">
                    <div class="col">
                      <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" name="newPassword" class="form-control">
                      </div>
                    </div>
                    <div class="col">
                      <div class="form-group">
                        <label for="confirmNewPassword">Confirm New Password</label>
                        <input type="password" name="confirmNewPassword" class="form-control">
                      </div>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col">
                      <button type="submit" class="btn bg-custom btn-block">
                        <i class="fa fa-lock"></i> Update Password
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>