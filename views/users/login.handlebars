<div class="row py-5">
  <div class="col-md-6 mx-auto">

    {{!-- Check any error --}}
    {{#if error}}
    <div class="alert alert-danger">
      {{error}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{/if}}

    {{!-- Check for any other messages --}}
    {{#if success_msg}}
    <div class="alert alert-success">
      {{success_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{else}}
    {{!-- Check for error messages --}}
    {{#if error_msg}}
    <div class="alert alert-danger">
      {{error_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{else}}

    {{/if}}

    {{/if}}
    <div class="card">
      <div class="card-body">
        <div class="profile-img">
          <i class="fa fa-user-circle fa-4x"></i>
          <h5 class="py-2 text-dark">Welcome Back</h5>
        </div>
        <form action="/users/login" method="post" class="mt-3">
          <div class="form-row">
            <div class="col">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" required>
              </div>
            </div>

            <div class="col">
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" required>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="col"></div>
            <div class="col">
              <button type="submit" class="btn btn-block bg-custom ">Login
              <i class="fa fa-sign-in"></i>
            </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    {{#if userFound}}

    {{else}}
    <div class="card mt-2">
      <div class="card-body text-center">
        <p class="lead">No account? <a href="/users/register" style="text-decoration: none;">Create one</a>
        </p>
      </div>
    </div>
    {{/if}}

  </div>
</div>