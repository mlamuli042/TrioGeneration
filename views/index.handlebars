<!-- Contact section -->
<div class="row py-3" id="contact">
  <div class="col-lg-6 col-sm-12 order-sm-2 order-lg-1">
    {{#each errors}}
    <div class="alert alert-danger comment-feedback">
      {{text}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{else}}

    {{/each}}

    {{#if success_msg}}
    <div class="alert alert-success">
      {{success_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{else}}

    {{/if}}

    {{#if error_msg}}
    <div class="alert alert-danger">
      {{error_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{else}}

    {{/if}}
    <h3 class="h4">Get in touch</h3>
    <p>Your email address will not be published</p>
    <form action="/" method="post">
      <div class="form-group">
        <div class="input-group ">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
          <input type="text" name="name" class="form-control" value="{{name}}" placeholder="Name" required>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group ">
          <span class="input-group-text">
            <i class="fa fa-envelope"></i>
          </span>
          <input type="email" name="email" class="form-control" value="{{email}}" placeholder="Email" required>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group ">
          <span class="input-group-text">
            <i class="fa fa-pencil"></i>
          </span>
          <textarea name="message" class="form-control" placeholder="Message" rows="3" required>{{message}}</textarea>
        </div>
      </div>

      <input type="submit" value="Submit" class="btn bg-custom btn-block text-white mb-5">
    </form>
  </div>

  <div class="col-lg-6 col-sm-12 order-sm-1 order-lg-2">

    {{#if messages}}
    <p>Latest Comments</p>
    {{else}}

    {{/if}}

    <div id="wrapper">
      <div class="scrollbar" id="style-1">
        <div class="force-overflow">
          {{#each messages}}
          <table class="stripped">
            <thead>
              <tr>
                <th scope="row"></th>
                <td width="70">
                  <i class="fa fa-user fa-3x text-secondary"
                    style="width: 50px; margin-left:10px; margin-top: 10px;"></i>
                </td>
                <td class="text-primary"><strong>{{name}}</strong></td>
                <td class="text-muted" style="padding-left: 10px;">
                  {{formatDate date 'MMMM Do YYYY'}}
                </td>
              </tr>
            </thead>
          </table>
          <p style="margin-left: 75px; width:80%">{{details}}</p>
          <hr>
          {{else}}
          <center>
            <img src="/img/trio-generation.png" alt="Trio Generation - Logo" class="logo">
          </center>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
