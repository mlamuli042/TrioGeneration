  <!-- ORDER MODAL -->
  <div class="modal fade" id="orderModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Buy a T-Shirt</h5>
          <button class="close" data-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">
          <p class="text-muted mb-3">Helpline: +268 76771099 or +268 79861154</p>

          <form action="/" method="post" id="order-form">

            {{#each errors}}
            <div class="alert alert-danger feedback">{{text}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                  aria-hidden="true">&times;</span></button>
            </div>
            {{else}}

            {{/each}}

            {{#if success_msg}}
            <div class="alert alert-success feedback">
              {{success_msg}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                  aria-hidden="true">&times;</span></button>
            </div>
            {{else}}

            {{/if}}

            {{#if error_msg}}
            <div class="alert alert-danger feedback">
              {{error_msg}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                  aria-hidden="true">&times;</span></button>
            </div>
            {{else}}

            {{/if}}

            <div class="form-group">
              <label for="name">Name</label>
              <input name="orderName" type="text" class="form-control" id="name" value="{{name}}">
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input name="orderEmail" type="email" class="form-control" id="email" value="{{email}}">
            </div>

            <div class="form-group">
              <label for="phone">Phone</label>
              <input name="phone" type="tel" class="form-control" id="phone" value="{{phone}}">
            </div>

            <div class="form-group">
              <label for="address">Address</label>
              <input name="address" type="text" class="form-control" id="address">
              <small class="text-muted">
                * Optional *
              </small>
            </div>

            <div class="form-group">
              <label for="color">Color</label>
              <input name="color" type="text" class="form-control" id="color" value="{{color}}">
              <small class="form-text text-muted">
                * We have all colors available *
              </small>
            </div>

            <div class="form-group">
              <label for="color">Size</label>
              <select name="size" class="custom-select mb-3" id="size" value="{{size}}">
                <option selected>Choose your size</option>
                <option value="XSmall">XS</option>
                <option value="Small">S</option>
                <option value="Medium">M</option>
                <option value="Large">L</option>
                <option value="XLarge">XL</option>
              </select>
            </div>
            <input type="submit" value="Submit" class="btn bg-custom btn-block text-white btn-lg mb-5">

          </form>
        </div>
      </div>
    </div>
  </div>
  {{!End of Modal --}}

</div>

