<div class="row py-5 ">
  <div class="col-md-12 mx-auto">
        {{#if orders}}
        <h3 class="text-center mb-2">{{countOrder}}</h3>
         <h4 class="text-center">Latest orders</h4>
          <table class="table table-striped table-sm table-borderless">
          <thead class="thead-inverse">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Color</th>
              <th scope="col">Size</th>
              <th scope="col">Phone</th>
              <th scope="col" class="d-none d-lg-block">Email</th>
              <th scope="col">Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
              <tr>
              <td scope="row">{{name}}</td>
              <td>{{color}}</td>
              <td>{{size}}</td>
              <td>{{phone}}</td>
              <td class="d-none d-lg-block">{{email}}</td>
              <td>{{formatDate date 'MMMM Do, YYYY'}}</td>
              <td>
                <form action="#" method="post">
                  <button type="submit" class="btn btn-danger btn-block"><i class="fa fa-remove"></i> <span class="d-none d-lg-inline-block">Delete</span></button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
          </table>
        {{else}}
          <p class="lead text-center">No orders made yet.</p>
        {{/if}}
    
  </div>
</div>