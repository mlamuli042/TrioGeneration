{{#if orders}}
<div class="row py-3">
  <div class="col-md-12 mx-auto">
    {{#if success_msg}}
    <div class="alert alert-success">
      {{success_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
    </div>
    {{else}}

    {{/if}}

    <div class="card">
      <div class="card-header text-white" style="background-color: #00b4db;">
        <h4>{{orders.length}} orders</h4>
      </div>
      <div class="card-body">
        <table class="table table-striped table-sm table-borderless">
          <thead class="thead-inverse">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Color</th>
              <th scope="col">Size</th>
              <th scope="col">Phone</th>
              <th scope="col" class="d-none d-lg-block">Email</th>
              <th scope="col">Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
            <tr>
              <td scope="row">{{name}}</td>
              <td>{{color}}</td>
              <td>{{size}}</td>
              <td>{{phone}}</td>
              <td class="d-none d-lg-block">{{email}}</td>
              <td>{{formatDate date 'MMMM Do YYYY'}}</td>
              <td>
                <form action="/orders/{{id}}?_method=DELETE" method="post">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger btn-block" 
                  data-toggle="tooltip" data-placement="top" title="Delete order">
                  <i class="fa fa-remove"></i> <span class="d-none d-lg-inline-block">
                    Delete</span>
                  </button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{{else}}
<p class="lead text-center my-5">No orders made yet.</p>
{{/if}}